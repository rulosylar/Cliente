<h1>Etiquetas RFID</h1>
<table>
  <thead>
    <tr>
      <th>Rfid</th>
      <th>Imagen</th>
      <th>Nombre</th>
      <th>Descripci√≥n</th>
      <th>Antena</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.rfid %></td>
        <td><%= image_tag item.image_url(:thumb).to_s if item.image? %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.antenna %></td>
        <td>
          <%if item.image? %>
            <ul class="button-group">
              <li><%= link_to 'Mostrar', item, class: "small button" %></li>
              <li><%= link_to 'Editar', edit_item_path(item), class: "small button" %></li>
            </ul>
          <% else %>
            <%= link_to 'Crear', edit_item_path(item), class: "small button success round" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
